
@model MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>POPIS FILMOVA</h2>

<p>
    <a asp-action="Create">Dodaj novi film</a>
</p>

<form asp-controller="Movies" asp-action="Index">
    <p>
        Zanr: 
        <select asp-for="movieGenre" asp-items="Model.genres">
            <option value="">Svi</option>
        </select>

        Naslov: <input type="text" name="SearchString">
        <input type="submit" value="Trazi" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.movies[0].Title)
               
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.movies[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.movies[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.movies[0].Grade)
                
            </th>
            <th>
               @Html.DisplayNameFor(model => model.movies[0].Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.movies[0].Actors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.movies) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
                
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
               
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Actors)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Detalji</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Izbrisi</a>
            </td>
        </tr>
}
    </tbody>
</table>
